<%= render :partial => "sidebar" %>

<h1>New building</h1>
<p>
	<p>
	<% semantic_form_for @building do |f| %>
		<% f.inputs do %>
			<%= f.input :name, :hint => 'This is typically the street address of the building.' %>
			<%= f.input :short_name, :hint => "For example, \'275 Kent Street\' becomes \'275K\'" %>
			<%= f.input :suburb %>
			<%= f.input :state, :as => :select, :collection => get_yaml_keys('State'), :include_blank =>false, :selected => 'NSW' %>
			<%= f.input :building_zone, :as => :select, :collection => get_yaml_keys('BuildingZone'), :include_blank => false %>
			<%= f.input :available_for_sip, :as => :radio %>
		<% end %>
		<%= f.buttons %>
	<% end %>
	</p>

<%= link_to 'Back', buildings_path %>